<script>
  let adminOpen = document.querySelector('.admin')
  let adminClose = document.getElementById('menu')
  let close = document.getElementById('close')
  let cover = document.getElementById('cover')
  
 adminOpen.addEventListener('click',(e)=>{
    adminClose.style.display = 'block'
   // adminClose.style.marginLeft = '300px'
    cover.style.width = '1000px' 
 })
 
 close.onclick = function(){
    adminClose.style.display = 'none'
 }

 //receipt
 let amount = {
    totalAmount :document.getElementById('totalAmount'),
    amountPaying :document.getElementById('amountPaying'),
    amountOwing : document.getElementById('amountOwing'),
 }

 function sub(value){
    var x = amount.totalAmount.value - value
    amount.amountOwing.value = `Owing ${x} Naira`
 }

